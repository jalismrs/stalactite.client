<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/6.3/phpunit.xsd"
        beStrictAboutCoversAnnotation="true"
        beStrictAboutOutputDuringTests="true"
        beStrictAboutTodoAnnotatedTests="true"
        bootstrap="vendor/autoload.php"
        cacheTokens="false"
        columns="max"
        colors="true"
        forceCoversAnnotation="true"
        processIsolation="true"
        stderr="true"
        verbose="true"
>
    <testsuites>
        <testsuite name="">
            <directory>tests</directory>
        </testsuite>
        <testsuite name="access">
            <directory>tests/Access</directory>
            <directory>tests/Api/Access</directory>
            <directory>tests/Model/Access</directory>
            <directory>tests/Service/Access</directory>
        </testsuite>
        <testsuite name="authentication">
            <directory>tests/Authentication</directory>
            <directory>tests/Api/Authentication</directory>
            <directory>tests/Model/Authentication</directory>
            <directory>tests/Service/Authentication</directory>
        </testsuite>
        <testsuite name="data">
            <directory>tests/Data</directory>
            <directory>tests/Api/Data</directory>
            <directory>tests/Model/Data</directory>
            <directory>tests/Service/Data</directory>
        </testsuite>
        <testsuite name="api">
            <directory>tests/Api</directory>
        </testsuite>
        <testsuite name="api-access">
            <directory>tests/Api/Access</directory>
        </testsuite>
        <testsuite name="api-authentication">
            <directory>tests/Api/Authentication</directory>
        </testsuite>
        <testsuite name="api-data">
            <directory>tests/Api/Data</directory>
        </testsuite>
        <testsuite name="model">
            <directory>tests/Model</directory>
        </testsuite>
        <testsuite name="model-access">
            <directory>tests/Model/Access</directory>
        </testsuite>
        <testsuite name="model-authentication">
            <directory>tests/Model/Authentication</directory>
        </testsuite>
        <testsuite name="model-data">
            <directory>tests/Model/Data</directory>
        </testsuite>
        <testsuite name="service">
            <directory>tests/Service</directory>
        </testsuite>
        <testsuite name="service-access">
            <directory>tests/Service/Access</directory>
        </testsuite>
        <testsuite name="service-authentication">
            <directory>tests/Service/Authentication</directory>
        </testsuite>
        <testsuite name="service-data">
            <directory>tests/Service/Data</directory>
        </testsuite>
        <testsuite name="service-entry">
            <file>tests/Service/ServiceTest.php</file>
        </testsuite>
        <testsuite name="util">
            <directory>tests/Util</directory>
        </testsuite>
        <testsuite name="client">
            <file>tests/ClientTest.php</file>
        </testsuite>
        <testsuite name="request">
            <file>tests/Util/RequestTest.php</file>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
            <exclude>
                <directory>./vendor</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="var/coverage/clover.xml"/>
        <log type="coverage-html" target="var/coverage/html" showUncoveredFiles="true"/>
    </logging>
</phpunit>
