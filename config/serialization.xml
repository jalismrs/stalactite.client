<?xml version="1.0" ?>
<serializer
        xmlns="http://symfony.com/schema/dic/serializer-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/serializer-mapping
        https://symfony.com/schema/dic/serializer-mapping/serializer-mapping-1.0.xsd"
>
    <class
            name="Jalismrs\Stalactite\Client\Access\Model\AccessClearance"
    >
        <attribute
                name="accessGranted"
        >
            <group>main</group>
        </attribute>
        <attribute
                name="accessType"
        >
            <group>main</group>
        </attribute>
    </class>

    <class
            name="Jalismrs\Stalactite\Client\Authentication\Model\TrustedApp"
    >
        <attribute
                name="authToken"
        >
            <group>main</group>
        </attribute>
        <attribute
                name="googleOAuthClientId"
        >
            <group>main</group>
            <group>upsert</group>
        </attribute>
        <attribute
                name="name"
        >
            <group>main</group>
            <group>upsert</group>
        </attribute>
        <attribute
                name="resetToken"
        >
            <group>reset</group>
        </attribute>
        <attribute
                name="uid"
        >
            <group>main</group>
        </attribute>
    </class>

    <class
            name="Jalismrs\Stalactite\Client\Data\Model\Customer"
    >
        <attribute
                name="email"
        >
            <group>main</group>
            <group>create</group>
            <group>update</group>
        </attribute>
        <attribute
                name="firstName"
        >
            <group>main</group>
            <group>create</group>
            <group>update</group>
        </attribute>
        <attribute
                name="googleId"
        >
            <group>main</group>
        </attribute>
        <attribute
                name="lastName"
        >
            <group>main</group>
            <group>create</group>
            <group>update</group>
        </attribute>
        <attribute
                name="uid"
        >
            <group>main</group>
        </attribute>
    </class>
</serializer>
